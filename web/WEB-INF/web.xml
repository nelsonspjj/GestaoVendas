<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>JSPLogin</display-name>
    <filter>
        <filter-name>ApplicationFilter</filter-name>
        <filter-class>br.com.login.security.ApplicationFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ApplicationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>UnicaEntradaServlet</servlet-name>
        <url-pattern>/UnicaEntradaServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <description/>
        <display-name>LoginController</display-name>
        <servlet-name>Login</servlet-name>
        <servlet-class>br.com.login.Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <description/>
        <display-name>LogoutController</display-name>
        <servlet-name>Logout</servlet-name>
        <servlet-class>br.com.login.Controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <description/>
        <display-name>RegistroController</display-name>
        <servlet-name>Registro</servlet-name>
        <servlet-class>br.com.login.Controller.RegistroController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnicaEntradaServlet</servlet-name>
        <servlet-class>br.com.login.Controller.UnicaEntradaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
</web-app>
